{
  "name": "swapperd-native",
  "version": "0.0.1",
  "description": "The native Desktop interface for SwapperD",
  "author": "Ren",
  "license": "MIT",
  "build": {
    "appId": "com.github.republicprotocol.swapperd-native",
    "afterPack": "./packaging/afterPackHook.js",
    "linux": {
      "category": "Utility",
      "icon": "resources/icon.png"
    },
    "mac": {
      "icon": "resources/app.icns"
    },
    "win": {
      "target": "nsis",
      "icon": "resources/icon.ico"
    },
    "nsis": {
      "oneClick": true,
      "allowElevation": true,
      "runAfterFinish": true,
      "warningsAsErrors": false,
      "createDesktopShortcut": true,
      "include": "build/include.nsh"
    },
    "files": [
      "resources"
    ],
    "productName": "SwapperD Native",
    "publish": [
      {
        "provider": "github",
        "owner": "republicprotocol",
        "repo": "swapperd-native-releases"
      }
    ]
  },
  "scripts": {
    "lint": "tslint --project ./ -t stylish",
    "start": "electron-webpack dev",
    "build": "npm run prebuild && electron-webpack && electron-builder",
    "build:all": "npm run prebuild && electron-webpack && electron-builder -wml --x64",
    "build:win": "npm run prebuild && electron-webpack && electron-builder -w --x64",
    "build:dir": "npm run build --dir -c.compression=store -c.mac.identity=null",
    "postinstall": "electron-builder install-app-deps",
    "prebuild": "tsc packaging/afterPackHook.ts --lib es2015 --skipLibCheck"
  },
  "dependencies": {
    "auto-launch": "^5.0.5",
    "axios": "^0.18.0",
    "bcryptjs": "^2.4.3",
    "bignumber.js": "^8.0.2",
    "body-parser": "^1.18.3",
    "electron-updater": "^4.0.6",
    "express": "^4.16.4",
    "immutable": "^4.0.0-rc.12",
    "menubar": "^5.2.3",
    "moment": "^2.24.0",
    "node-notifier": "^5.4.0",
    "react": "^16.7.0",
    "react-copy-to-clipboard": "^5.0.1",
    "react-dom": "^16.7.0",
    "source-map-support": "^0.5.10",
    "sqlite3": "^4.0.6",
    "unstated": "^2.1.1"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0-0",
    "@babel/preset-react": "^7.0.0",
    "@types/auto-launch": "^5.0.0",
    "@types/bcryptjs": "^2.4.2",
    "@types/body-parser": "^1.17.0",
    "@types/express": "^4.16.1",
    "@types/extract-zip": "^1.6.2",
    "@types/menubar": "^5.1.6",
    "@types/node": "^10.12.21",
    "@types/node-notifier": "^0.0.28",
    "@types/react": "^16.8.1",
    "@types/react-dom": "^16.0.11",
    "@types/sqlite3": "^3.1.3",
    "babel-loader": "^8.0.5",
    "devtron": "^1.4.0",
    "electron": "4.0.2",
    "electron-builder": "20.38.5",
    "electron-webpack": "^2.6.2",
    "electron-webpack-ts": "^3.1.1",
    "extract-zip": "^1.6.7",
    "node-sass": "^4.11.0",
    "prop-types": "^15.0.0",
    "react-hot-loader": "4.6.5",
    "sass-loader": "^7.1.0",
    "ts-unused-exports": "^2.0.11",
    "tslint": "^5.12.1",
    "tslint-microsoft-contrib": "^6.0.0",
    "tslint-react": "^3.6.0",
    "typescript": "^3.3.1",
    "webpack": "4.29.1",
    "webpack-build-notifier": "^0.1.30"
  }
}
